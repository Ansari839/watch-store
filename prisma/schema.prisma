generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  gradient    String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  price         Float
  originalPrice Float?
  images        String[]
  description   String?
  badge         String?
  rating        Float    @default(0)
  reviewCount   Int      @default(0)
  specifications Json?   // Store technical specs
  variants      Json?    // Store size/color variants with price/stock
  featured      Boolean  @default(false)
  
  // SEO Fields
  metaTitle       String?
  metaDescription String?
  keywords        String?

  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String
  
  reviews       Review[]
  orderItems    OrderItem[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  author    String
  
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER")
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id              String      @id @default(cuid())
  user            User?       @relation(fields: [userId], references: [id])
  userId          String?
  total           Float
  status          String      @default("PENDING")
  
  // Customer & Shipping Metadata
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String
  whatsappEnabled Boolean     @default(false)
  
  items           OrderItem[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  price     Float
  variant   String? // To track which variant was bought
  
  product   Product @relation(fields: [productId], references: [id])
  productId String
  
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}

model LandingPageSettings {
  id              String   @id @default("singleton")
  heroProductIds  String[] // IDs of products to show in the hero slider
  featuredIds     String[] // Explicit IDs for featured section
  categoryImages  Json?    // Store category ID to image URL mapping
  footerEmail     String?
  footerPhone     String?
  footerAddress   String?
  footerSocials   Json?    // Store social links
  updatedAt       DateTime @updatedAt
}

model StoreSettings {
  id                String   @id @default("singleton")
  currency          String   @default("USD")
  currencySymbol    String   @default("$")
  taxPercentage     Float    @default(0)
  shippingFlatRate  Float    @default(0)
  
  // Notification Settings
  adminEmail        String?
  orderEmailSubject String   @default("New Order Received")
  orderEmailBody    String   @db.Text // HTML/Markdown template
  
  // Operational
  maintenanceMode   Boolean  @default(false)
  whatsappNotify    Boolean  @default(true)
  whatsappNumber    String?  // The number customer will contact
  
  // Marketing & SEO
  metaPixelId       String?
  googleAnalyticsId String?
  siteTitle         String   @default("Watch Store - Premium Timepieces")
  siteDescription   String   @default("Discover the finest luxury watches from top brands.")
  keywords          String?  // Comma separated
  
  updatedAt         DateTime @updatedAt
}
